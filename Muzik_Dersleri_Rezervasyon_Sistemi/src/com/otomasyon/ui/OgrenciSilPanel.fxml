<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10"
      alignment="CENTER"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.otomasyon.controller.OgrenciSilPanelController"
      style="-fx-background-color: #F3F7FB; -fx-padding: 25;">

    <Label text="ÖĞRENCİ SİL"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill:#014f86;"/>

    <TextField fx:id="txtSilId"
               promptText="Silinecek Öğrencinin ID'si"
               maxWidth="220"/>

    <Button text="Sil"
            prefWidth="120"
            onAction="#ogrenciSil"
            style="-fx-background-color:#014f86; -fx-text-fill:white;"/>
            
    <Label fx:id="lblSonuc"
           text=""
           style="-fx-font-size: 13px;"/>

</VBox>
