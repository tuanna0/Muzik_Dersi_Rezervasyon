<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.otomasyon.controller.DersMenuContreller">

    <ImageView fitWidth="900"
               fitHeight="600"
               preserveRatio="false"
               mouseTransparent="true">
        <image>
            <Image url="@images/dersler.jpg"/>
        </image>
    </ImageView>

    <VBox spacing="15"
          alignment="CENTER"
          prefWidth="300"
          style="
            -fx-padding: 25;
            -fx-background-color: rgba(224,225,221,0.85);
            -fx-background-radius: 15;
          ">

        <Button text="Ders Ekle"
                prefWidth="200"
                onAction="#dersEklePanelAc"
                style="-fx-background-color:#014f86; -fx-text-fill:white;"/>

        <Button text="Ders Sil"
                prefWidth="200"
                onAction="#dersSilPanelAc"
                style="-fx-background-color:#014f86; -fx-text-fill:white;"/>

        <Button text="Dersleri Görüntüle"
                prefWidth="200"
                onAction="#dersGoruntulePanelAc"
                style="-fx-background-color:#014f86; -fx-text-fill:white;"/>

    </VBox>

</StackPane>
