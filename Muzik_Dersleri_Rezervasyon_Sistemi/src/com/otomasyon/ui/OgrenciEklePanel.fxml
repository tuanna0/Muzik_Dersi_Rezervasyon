<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ComboBox?>


<VBox spacing="10" alignment="CENTER"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.otomasyon.controller.OgrenciEklePanelController" style="-fx-background-color: #F3F7FB; -fx-padding: 25;">

    <Label text="ÖĞRENCİ EKLE" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill:#014f86;"/>

    <TextField fx:id="txtAd" promptText="Ad" maxWidth="250"/>
    <TextField fx:id="txtSoyad" promptText="Soyad" maxWidth="250"/>
    <TextField fx:id="txtEmail" promptText="Email" maxWidth="250"/>
    <TextField fx:id="txtTckn" promptText="TCKN" maxWidth="250"/>
    <TextField fx:id="txtTel" promptText="Telefon" maxWidth="250"/>
    <ComboBox fx:id="cmbSeviye" promptText="Seviye Seçiniz" maxWidth="250"/>


    <Button text="Ekle" onAction="#ogrenciEkle" prefWidth="200" style="-fx-background-color:#014f86; -fx-text-fill:white;"/>

</VBox>
