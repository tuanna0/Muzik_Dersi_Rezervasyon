<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.otomasyon.controller.DersGoruntulePanelController"
      style="-fx-background-color: #F3F7FB; -fx-padding: 25;">

    <Label text="DERS GÖRÜNTÜLE"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill:#014f86;"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Sırala:"/>
        <ComboBox fx:id="cmbSirala"
                  prefWidth="220"
                  onAction="#sirala"/>
        <Button text="Yenile"
                onAction="#yenile"
                style="-fx-background-color:#014f86; -fx-text-fill:white;"/>
    </HBox>

    <ListView fx:id="liste"
              prefWidth="500"
              prefHeight="380"/>

</VBox>
