<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="12" alignment="CENTER"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.otomasyon.controller.RandevuOlusturPanelController"
      style="-fx-background-color: #F3F7FB; -fx-padding: 25;">

    <Label text="RANDEVU OLUŞTUR"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill:#014f86;"/>

    <GridPane hgap="10" vgap="12" alignment="CENTER">

        <Label text="Öğrenci:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cmbOgrenci" prefWidth="260"
                  GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Öğretmen:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cmbOgretmen" prefWidth="260"
                  GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Ders:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cmbDers" prefWidth="260"
                  GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Tarih (GG/AA/YYYY):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtTarih" prefWidth="260"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Saat (HH:MM):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="txtSaat" prefWidth="260"
                   GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Button text="Randevu Oluştur"
                prefWidth="220"
                onAction="#randevuOlustur"
                GridPane.rowIndex="5"
                GridPane.columnIndex="0"
                GridPane.columnSpan="2"
                style="-fx-background-color:#014f86; -fx-text-fill:white;"/>

    </GridPane>

</VBox>
