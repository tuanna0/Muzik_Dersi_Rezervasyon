<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>



<VBox spacing="10" alignment="CENTER"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.otomasyon.controller.OgretmenGoruntulePanelController" style="-fx-background-color: #F3F7FB; -fx-padding: 25;"> 
	
	<Label text="ÖĞRETMEN GÖRÜNTÜLE"
           style="-fx-font-size: 18px; -fx-font-weight: bold;  -fx-text-fill:#014f86;"/>
           
    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="txtAra"
                   promptText="Öğretmen adı giriniz"
                   prefWidth="200"/>
        <Button text="Ara"
                onAction="#adaGoreAra" style="-fx-background-color:#014f86; -fx-text-fill:white;"/>
    </HBox>
    
    <ListView fx:id="liste" prefWidth="350" prefHeight="400"/>

</VBox>

