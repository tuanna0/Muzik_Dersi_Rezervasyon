<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10"
      alignment="CENTER"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.otomasyon.controller.OgretmenSilPanelController"
      style="-fx-background-color: #F3F7FB; -fx-padding: 25;">

    <Label text="ÖĞRETMEN SİL"
           style="-fx-font-size: 18px; -fx-font-weight: bold;  -fx-text-fill:#014f86;"/>

    <TextField fx:id="txtId"
               promptText="Silinecek öğretmenin ID'si"
               maxWidth="250"/>

    <Button text="Sil"
            prefWidth="150"
            onAction="#ogretmenSil"
            style="-fx-background-color:#014f86; -fx-text-fill:white;"/>

</VBox>
